<section id="needle-section" class="px-8 py-8">
  <!-- Escala de Referencia -->
  <div class="relative h-32 flex items-end justify-center">
    <!-- Marcas de la Escala -->
    <div
      id="scale"
      class="absolute top-0 left-0 right-0 flex justify-between px-4 text-xs font-medium text-slate-500"
    >
      <span>-50</span>
      <span>-25</span>
      <span class="text-green-400 font-bold">0</span>
      <span>+25</span>
      <span>+50</span>
    </div>

    <!-- Arco del Medidor -->
    <div
      class="absolute top-6 left-4 right-4 h-16 border-t-4 border-l-4 border-r-4 border-slate-600 rounded-t-full"
    >
    </div>

    <!-- Indicador Central (Verde = Afinado) -->
    <div
      class="absolute top-6 left-1/2 -translate-x-1/2 w-1 h-5 bg-green-500 rounded-full shadow-lg shadow-green-500/50"
    >
    </div>

    <!-- Aguja del Medidor -->
    <div
      id="needle"
      class="absolute bottom-0 left-1/2 origin-bottom w-1 h-24 bg-gradient-to-t from-red-500 to-orange-400 rounded-full shadow-lg transition-transform duration-75"
      style="transform: translateX(-50%) rotate(0deg);"
    >
      <!-- Punta de la Aguja -->
      <div
        class="absolute -top-1 left-1/2 -translate-x-1/2 w-3 h-3 bg-orange-400 rounded-full shadow-lg"
      >
      </div>
    </div>

    <!-- Pivot de la Aguja -->
    <div
      class="absolute bottom-0 left-1/2 -translate-x-1/2 w-6 h-6 bg-slate-700 rounded-full border-4 border-slate-600 shadow-inner"
    >
    </div>
  </div>

  <!-- Display de Cents -->
  <div
    id="cents-display"
    class="text-center mt-4 text-lg font-mono text-slate-400"
  >
    0 cents
  </div>
</section>
